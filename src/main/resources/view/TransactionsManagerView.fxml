<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TransactionsManagerViewController">
    <center>
        <TableView fx:id="transactionsTable" prefHeight="200.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="descriptionColumn" prefWidth="300.0" text="Description" />
                <TableColumn fx:id="amountColumn" prefWidth="150.0" text="Amount" />
                <TableColumn fx:id="balanceColumn" prefWidth="150.0" text="Balance" />
                <TableColumn fx:id="statementIdColumn" prefWidth="100.0" text="Statement ID" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
            <Button fx:id="addButton" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#handleAddNewBankStatement"
                    text="Add new bank statement">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
